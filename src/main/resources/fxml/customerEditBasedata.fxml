						<children>
							<Label prefHeight="36.0" prefWidth="207.0" text="Postleitzahl"
								textAlignment="CENTER">
								<font>
									<Font name="System Bold" size="16.0" />
								</font>
							</Label>
							<TextField fx:id="zip" prefWidth="150.0" promptText="Postleitzahl" />
						</children>
					</VBox>
					<VBox layoutX="275.0" layoutY="10.0" prefHeight="60.0"
						prefWidth="150.0">
						<children>
							<Label prefHeight="36.0" prefWidth="207.0" text="Ort"
								textAlignment="CENTER">
								<font>
									<Font name="System Bold" size="16.0" />
								</font>
							</Label>
							<TextField fx:id="city" promptText="Ort" />
						</children>
					</VBox>
				</children>
				<padding>
					<Insets left="15.0" />
				</padding>
			</HBox>
		</children>
